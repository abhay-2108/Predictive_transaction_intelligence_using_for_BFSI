# Enhanced Fraud Dashboard Environment Configuration
# Copy this file to .env and update the values

# Database Configuration
MONGODB_URL=mongodb://localhost:27017
DATABASE_NAME=fraud_detection

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# InfluxDB Configuration
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=fraud-dashboard-token-12345
INFLUXDB_ORG=fraud-detection
INFLUXDB_BUCKET=transactions

# Elasticsearch Configuration
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=
ELASTICSEARCH_INDEX_PREFIX=fraud-dashboard

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Security Configuration
SECRET_KEY=fraud-dashboard-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# API Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Email Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@frauddashboard.com

# Twilio Configuration (for SMS alerts)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Slack Configuration (for Slack alerts)
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_CHANNEL=#fraud-alerts

# ML Model Configuration
MODEL_REGISTRY_PATH=./models
MODEL_PERFORMANCE_THRESHOLD=0.85
MODEL_DRIFT_THRESHOLD=0.1

# Alert Configuration
DEFAULT_ALERT_THRESHOLD=0.7
ALERT_ESCALATION_DELAY_MINUTES=15
MAX_ALERTS_PER_CUSTOMER_HOUR=5

# Data Retention Configuration
TRANSACTION_RETENTION_DAYS=2555  # 7 years
AUDIT_LOG_RETENTION_DAYS=2555    # 7 years
ANALYTICS_DATA_RETENTION_DAYS=365 # 1 year

# Compliance Configuration
ENABLE_AUDIT_LOGGING=true
ENABLE_DATA_ANONYMIZATION=true
COMPLIANCE_REPORT_SCHEDULE=0 0 1 * *  # Monthly

# Performance Configuration
MAX_CONCURRENT_REQUESTS=100
DATABASE_POOL_SIZE=10
CACHE_TTL_SECONDS=300  # 5 minutes

# Development Configuration
DEBUG=false
LOG_LEVEL=INFO
ENABLE_CORS=true